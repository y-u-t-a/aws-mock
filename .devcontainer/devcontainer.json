{
	"name": "Node & TypeScript",
	"image": "node:14.3.0-alpine",
	"extensions": [
		"ms-vscode.vscode-typescript-tslint-plugin"
	],
	// マウントモードを delegated にしてコンテナの書き込み速度を優先する
	// Docker リファレンス : https://docs.docker.com/docker-for-mac/osxfs-caching/#tuning-with-consistent-cached-and-delegated-configurations
	// VSCode リファレンス : https://code.visualstudio.com/docs/remote/containers-advanced#_update-the-mount-consistency-to-delegated-for-macos
	"remote.containers.workspaceMountConsistency": "delegated",
	// コンテナが作成された時に実行するコマンド
	"postCreateCommand": "apk update && apk add --no-cache git && npm install",
}